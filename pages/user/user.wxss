/* pages/user/user.wxss */
page {

}
.user {
    width: 100%;
}
.header {
    padding: 30rpx 30rpx 68rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-image: linear-gradient(to bottom, #7966FE 0%, #AE73E0 100%);
}
.header > view:first-child {
    width: 95rpx;
    overflow: hidden;
    background-color: #fff;
    border-radius: 50%;
    height: 95rpx;
}
.header > view:first-child image{
    width: 100%;
    height: 100%;
}
.header > view:nth-child(2) {
    width: 62%;
    padding-left: 12px;
    color: #fff;
    font-size: 34rpx;
}
.header > view:nth-child(2) > view{
    font-size: 28rpx;
}
.header > view:nth-child(3) {
    width: 70px;
    height: 50px;
    color: #fff;
    background-image: url('https://i.loli.net/2018/11/13/5bea9f82decc3.png');
    background-repeat: no-repeat;
    background-size: 100%;
}
.header > view:nth-child(3) > view{
    font-size: 32rpx;
    font-weight: 700;
    line-height: 42rpx;
    padding: 3px 15px 0;
    text-align: center;
}
.user_content {
    position: relative;
    top: -26rpx;
}
.user_content >.user_btn {
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 26rpx 16rpx;
    box-shadow: 0 1px 10px rgba(217,245,226,.1);
    margin: 0 20rpx 20rpx;
}
.user_content >.user_btn >view {
    position: relative;
    width: 210rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-weight: 700;
    border-radius: 40rpx;
    font-size: 28rpx;
    color: #fff;
    box-shadow: 0 3px 1px rgba(217,245,226,.8);
}
.user_content >.user_btn >view:nth-child(1) {
    background-color: #33CC66;
}
.user_content >.user_btn >view:nth-child(2) {
    background-color: #7A65FE;
}
.user_content >.user_btn >view:nth-child(3) {
    background-color: #FF6633;
}
.mod_item {
    margin-bottom: 20rpx;
}
.mod_title {
    background-color: #fff;
    padding: 20rpx;
    color: #333333;
    font-size: 32rpx;
    height: 36rpx;
    line-height: 36rpx;
    display: flex;
    align-items: center;
    border-bottom: 0.5px solid #ccc;
}
.mod_title > span {
    width: 4px;
    height: 38rpx;
    display: block;
    background-color: #FFB328;
    margin-right: 12rpx;
    /* position: absolute;
    left: 28rpx;
    top: 20rpx; */
}
.mod_btn_group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    background-color: #fff;
}
.mod_btn_group > view {
    width: 25%;
    text-align: center;
    color: #333;
    font-size: 32rpx;
    padding: 30rpx 0;
    border-bottom: 0.5px solid #ccc;
    position: relative;
}
.mod_btn_group > view >  text {
    color: #7A65FE;
    font-size: 60rpx;
    margin-bottom: 20rpx;
}
.mod_btn_group > view >  .badge_dot {
    top: 10rpx;
    right: 24rpx;
}
.mod_btn_group > .disabled {
    width: 25%;
    text-align: center;
    color: #ccc;
    font-size: 32rpx;
    padding: 30rpx 0;
    border-bottom: 0.5px solid #ccc;
}
.mod_btn_group > .disabled >  text {
    color: #ccc;
    font-size: 60rpx;
    margin-bottom: 20rpx;
}
.mod_btn_group > .disabled >  .badge_dot {
    color: #fff;
    background-color: #ccc;
}
.link_item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-bottom: 0.5px solid #ccc;
    padding: 24rpx 0;
}
.link_item > .mod_title {
    border-bottom: 0;
}
.link_item > text {
    color: #C9CCD1;
    font-size: 32rpx;
    padding-right: 20rpx;
}
